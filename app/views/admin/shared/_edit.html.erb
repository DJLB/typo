<% className = form_action.delete(:class) %>
<%= form_tag(form_action, :id => "#{form_type}_form", :enctype => "multipart/form-data", :class => className) do %>

  <%= render :partial => "form" %>
<% end %>

	<% if Profile.find(current_user.profile_id).label == "admin" %>
 		<h3> Merge Articles </h3>
 		<%= form_tag :id => @article.id, :action => "merge_with" do %>
 			<label for="merge_with"> Article ID </label>
 			<input id="merge_with" name="merge_with" type="text" />
 			<br><input name="commit" type="submit" value="Merge" />
 		<% end %>
 	<% end %>